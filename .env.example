# JIT Runner Manager 환경 변수 예시
# 이 파일을 .env로 복사하고 값을 설정하세요

# ============================================================================
# GitHub Enterprise Server 설정
# ============================================================================

# GitHub Enterprise Server URL
GHES_URL=https://github.example.com
GHES_API_URL=https://github.example.com/api/v3

# Personal Access Token (admin:org, repo 권한 필요)
GITHUB_PAT=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Webhook Secret (GitHub Enterprise에서 설정한 값과 동일해야 함)
WEBHOOK_SECRET=your-webhook-secret-here

# ============================================================================
# Redis 설정
# ============================================================================

REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=1234
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================================================
# Runner 설정
# ============================================================================

# Organization별 최대 동시 Runner 수
MAX_RUNNERS_PER_ORG=10

# 전체 최대 동시 Runner 수
MAX_TOTAL_RUNNERS=200

# 동시에 처리할 최대 작업 수 (Runner 동시 등록 처리)
MAX_BATCH_SIZE=10

# Runner 라벨 (쉼표로 구분)
RUNNER_LABELS=code-linux

# Runner 그룹
RUNNER_GROUP=default

# Runner Pod가 생성될 네임스페이스
RUNNER_NAMESPACE=jit-runners

# Runner 이미지
RUNNER_IMAGE=ghcr.io/actions/actions-runner:latest
DIND_IMAGE=docker:dind

# ============================================================================
# Celery 설정
# ============================================================================

CELERY_WORKER_CONCURRENCY=10

# ============================================================================
# 로깅 설정
# ============================================================================

LOG_LEVEL=INFO
DEBUG=false

